MAE_PhysConstraintCreateFixed(body[2], body[3]);
MAE_PhysConstraintCreateFixed(body[3], body[4]);
MAE_PhysConstraintCreateFixed(body[4], body[5]);
*/

//debug draw toggle
debugdraw = false;

//mouse drag
dragging_body = -1;
dragging_distance = 0;
dragging_constraint = -1;
mouse_vector = 0;

</string>
